

<h1>Styles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= style.beer_style %></td>
        <td><%= link_to 'Show', style, class: "btn btn-link btn-sm" %></td>
        <td><%= link_to 'Edit', edit_style_path(style), class: "btn btn-link btn-sm" %></td>
        <td><%= link_to 'Destroy', style, class: 'btn btn-danger btn-link btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Style', new_style_path %>
