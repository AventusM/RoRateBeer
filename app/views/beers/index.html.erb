<p id="notice"><%= notice %></p>

<h1>Beers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer_path(beer.id) %></td>
        <!-- Näköjään ei täydykään laittaa beer['style'] - muotoa käyttöön... -->
        <td><%= beer.style.beer_style %></td>
        <td><%= link_to beer.brewery.name, brewery_path(beer.brewery.id) %></td>
        <!--<td><%= link_to 'Show', beer %></td>-->
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer', new_beer_path if current_user %> |
<%= link_to 'Breweries', breweries_path %>
