<p id="notice"><%= notice %></p>

<h2>
  <%= @beer_club.name %> <%= @beer_club.city%>
</h2>

<p>
  Founded c.<%= @beer_club.founded %>
</p>

<div>
  <h3>Members</h3>
  <ul>
    <% @beer_club.members.each do |member| %>
      <li>
      <%= link_to member.username, user_path(member.id) %>
      </li>
    <% end %>
  </ul>
</div>

<% if current_user and not blocked_to_join_club %>
  <%= form_for(@membership) do |f| %> <!-- submittaamalla formin suoritetaan membership controllerin create - metodi -->
    <%= f.hidden_field :beer_club_id %> 
    <%= f.submit value:"join the club" %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_beer_club_path(@beer_club) if current_user %> |
<%= link_to 'Back', beer_clubs_path %>
